<UserControl x:Class="Position_BulletinBoard.UserControl.ReservoirArea"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Position_BulletinBoard.UserControl"
             mc:Ignorable="d" 
             >
    <UniformGrid x:Name="grid" Columns="3" Rows="3">
        <Border BorderBrush="Black" BorderThickness="2 2 1 1"/>
        <Border BorderBrush="Black" BorderThickness="1 2 1 1"/>
        <Border BorderBrush="Black" BorderThickness="1 2 2 1"/>
        <Border BorderBrush="Black" BorderThickness="2 1 1 1"/>
        <Border BorderBrush="Black" BorderThickness="1"/>
        <Border BorderBrush="Black" BorderThickness="1 1 2 1"/>
        <Border BorderBrush="Black" BorderThickness="2 1 1 2"/>
        <Border BorderBrush="Black" BorderThickness="1 1 1 2"/>
        <Border BorderBrush="Black" BorderThickness="1 1 2 2"/>
    </UniformGrid>
</UserControl>
